[<%= @user %>]

listen = <%= node["php-fpm"][:socketdir] %>/<%= @user %>
listen.backlog = -1

listen.owner = <%= @user %>
listen.group = <%= @user %>
listen.mode = 0666

user = <%= @user %>
group = <%= @user %>

pm = dynamic
pm.max_children = 10
pm.start_servers = 3
pm.min_spare_servers = 2
pm.max_spare_servers = 5
pm.max_requests = 500

php_admin_flag[log_errors] = on
php_admin_value[error_log] = /var/log/php/fpm.<%= @user %>.log
php_admin_value[session.save_path] = /home/<%= @user %>/php_sessions
